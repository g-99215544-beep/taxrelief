rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /receipts/{receiptId} {
      allow read, write: if true;
    }

    match /tax_summary/{docId} {
      allow read: if true;
    }

    match /monthly_insights/{docId} {
      allow read: if true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
